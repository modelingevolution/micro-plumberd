{
  "metadata": [
    {
      "src": [
        {
          "src": "./src",
          "files": ["**/**.csproj"],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "**/**Tests.csproj",
            "**/*Test*",
            "**/*SourceGenerator*"
          ]
        }
      ],
      "dest": "docs/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}", "**/toc.yml", "index.md", "README.md", "**/*.png"
        ],
        "src":"docs",
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "MicroPlumberd",
      "_appTitle": "MicroPlumberd",
      "_enableSearch": true,
      "pdf": false
    }
  }
}