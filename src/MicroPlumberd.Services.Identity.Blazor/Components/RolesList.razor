@using Microsoft.AspNetCore.Identity
@using ModelingEvolution.Observable.Blazor
@inject RoleManager<Role> RoleManager
@inject RolesModel RolesModel
@inject IDialogService DialogService

<MudStack Spacing="4">
    <MudStack Row="true" Spacing="2">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="ShowAddRoleDialog">
            Add Role
        </MudButton>
    </MudStack>

    @if (!RolesModel.Items.Any())
    {
        <MudAlert Severity="Severity.Info">No roles found.</MudAlert>
    }
    else
    {
        <MudTable Items="@RolesModel.Items" Hover="true" Striped="true" Dense="true">
            <HeaderContent>
                <MudTh>Role Name</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Role Name">
                    <MudChip T="string" Color="@(context.Name == "Admin" ? Color.Primary : Color.Default)">
                        @context.Name
                    </MudChip>
                </MudTd>
                <MudTd DataLabel="Actions">
                    <MudTooltip Text="Edit Role">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Default"
                                       OnClick="() => ShowEditDialog(context)" />
                    </MudTooltip>
                    <MudTooltip Text="Delete Role">
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Default"
                                       OnClick="() => ShowDeleteDialog(context)"
                                       Disabled="@(context.Name == "Admin")" />
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
        </MudTable>
    }
</MudStack>

@code {
    [Parameter]
    public EventCallback OnRoleChanged { get; set; }

    private async Task ShowAddRoleDialog()
    {
        var parameters = new DialogParameters<AddRoleDialog>
        {
            { x => x.RoleManager, RoleManager }
        };

        var dialog = await DialogService.ShowAsync<AddRoleDialog>("Add Role", parameters);
        var result = await dialog.Result;

        if (!result!.Canceled)
        {
            await OnRoleChanged.InvokeAsync();
        }
    }

    private async Task ShowEditDialog(Role role)
    {
        var parameters = new DialogParameters<EditRoleDialog>
        {
            { x => x.RoleManager, RoleManager },
            { x => x.Role, role }
        };

        var dialog = await DialogService.ShowAsync<EditRoleDialog>("Edit Role", parameters);
        var result = await dialog.Result;

        if (!result!.Canceled)
        {
            await OnRoleChanged.InvokeAsync();
        }
    }

    private async Task ShowDeleteDialog(Role role)
    {
        var parameters = new DialogParameters<DeleteRoleDialog>
        {
            { x => x.RoleManager, RoleManager },
            { x => x.Role, role }
        };

        var dialog = await DialogService.ShowAsync<DeleteRoleDialog>("Delete Role", parameters);
        var result = await dialog.Result;

        if (!result!.Canceled)
        {
            await OnRoleChanged.InvokeAsync();
        }
    }
}
